[Unit]
Description=Run the mail server stack
Wants=network-online.target
After=network-online.target
[Service]
Type=oneshot
ExecStart=/bin/su {{ server_deploy_user_name }} -c "/usr/bin/docker-compose -f /home/{{ server_deploy_user_name }}/docker-compose.yml up -d"
[Install]
WantedBy=multi-user.target
